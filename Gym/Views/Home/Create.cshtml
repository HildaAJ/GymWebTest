@model Gym.Models.ViewModels.RegisterGroupViewModel

@{
    ViewBag.Title = "註冊";
}

<h2>註冊</h2>

<body>
    @using (Html.BeginForm("Create", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary()
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Register.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Register.Name, new { htmlAttributes = new { @class = "form-cotrol", required = "required" } })
                @Html.ValidationMessageFor(model => model.Register.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Register.Sex, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                男
                @Html.RadioButtonFor(model => model.Register.Sex, "男", new { @checked = true })
                女
                @Html.RadioButtonFor(model => model.Register.Sex, "女")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Register.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Register.Email, new { htmlAttributes = new { @class = "form-cotrol", type = "email", required = "required" } })
                @Html.ValidationMessageFor(model => model.Register.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            
            @Html.LabelFor(model => model.Register.Birthday, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Register.Birthday, new { htmlAttributes = new { @class = "form-cotrol", placeholder = "yyyymmdd", required = "required" } })
                @Html.ValidationMessageFor(model => model.Register.Birthday, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Register.Tel, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Register.Tel, new { htmlAttributes = new { @class = "form-cotrol", type = "tel", required = "required" } })
                @Html.ValidationMessageFor(model => model.Register.Tel, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Register.Password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.Register.Password, new { htmlAttributes = new { @class = "form-cotrol", required = "required" } })
                @Html.ValidationMessageFor(model => model.Register.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Register.ConfirePassword, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Register.ConfirePassword, new { htmlAttributes = new { @class = "form-cotrol", required = "required" } })
                @Html.ValidationMessageFor(model => model.Register.ConfirePassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Register.PassWay, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                iCash
                @Html.RadioButtonFor(model => model.Register.PassWay, "iCash")
                會員卡
                @Html.RadioButtonFor(model => model.Register.PassWay, "會員卡")
            </div>
        </div>

        <div class="form-group">
            <span class = "control-label col-md-2" style="font-weight:bold">請選擇運動場館</span>
            <div class="col-md-10">
             @Html.EditorFor(model=>model.StoreCheckList.stores)
            </div>
        </div>

    </div>

        <p><input type="submit" value="註冊" class="btn btn-success" /></p>
        <hr />
        <p id="msg" class="text-danger" style="font-weight:bold; font-size:15px">@ViewBag.RegisterMsg</p>

    }

</body>
<!--前端驗證-->
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}