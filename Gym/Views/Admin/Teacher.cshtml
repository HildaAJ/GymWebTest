        <script>
            var msg = TempData["Msg"];
            if (msg != null) {
                $(document).ready(function () {
                    alert(msg);
                });
            }

        </script>*@

</head>

@Html.AntiForgeryToken()
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TeacherNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EMail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TeacherNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EMail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("編輯資料", "TeacherEdit", new { id = item.TeacherNo })
            </td>
        </tr>
    }
</table>

<input type="submit" value="新增教練" class="btn btn-primary" onclick="location.href = '/Admin/TeacherAdd'" />

@if (TempData["result"] !=null)
{
    <script type="text/javascript">
        alert('@TempData["result"]');
    </script>

}


@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")

}

