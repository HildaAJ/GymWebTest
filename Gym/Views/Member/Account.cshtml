@model IEnumerable<Gym.Models.ViewModels.MemberInfoViewModel>

@{
    ViewBag.Title = "我的帳戶資訊";
}

<h2>我的帳戶資訊</h2>


<table class="table">

    @foreach (var item in Model)
    {
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
    </tr>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Birthday)
        </th>
        <td>
            @Html.DisplayFor(modelItem => item.Birthday)
        </td>
    </tr>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tel)
        </th>
        <td>
            @Html.DisplayFor(modelItem => item.Tel)
        </td>
    </tr>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Sex)
        </th>
        <td>
            @Html.DisplayFor(modelItem => item.Sex)
        </td>
    </tr>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
    </tr>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Passway)
        </th>
        <td>
            @Html.DisplayFor(modelItem => item.Passway)
        </td>
    </tr>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CreateTime)
        </th>
        <td>
            @Html.DisplayFor(modelItem => item.CreateTime)
        </td>
    </tr>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
    </tr>

    }

</table>

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <button type="submit" class="btn btn-primary" onclick="Edit()">修改</button>
        <button type="button" class="btn btn-warning" onclick="cancel()">取消</button>
    </div>
</div>

<script>
    function cancel() {
        location.href = "/Home/Index";
    }
    function Edit() {
        location.href = "/Member/AccountInfo";
    }

</script>
