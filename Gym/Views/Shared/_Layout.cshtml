<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 我的 ASP.NET 應用程式</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @{ var Role = ViewBag.RoleName;}
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @{
                    if (HttpContext.Current.User.Identity.IsAuthenticated)
                    {
                        if (Role == "Admin")
                        {
                            @Html.ActionLink("首頁", "Index", "Admin", new { area = "" }, new { @class = "navbar-brand" })
                        }
                        else
                        {
                            @Html.ActionLink("首頁", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                        }
                    }

                }

            </div>

            <div class="navbar-collapse collapse">
                @{
                    
                    if (HttpContext.Current.User.Identity.IsAuthenticated)
                    {
                        if (Role == "User")
                        {
                            <ul class="nav navbar-nav">

                                <li>@Html.ActionLink("會員登出", "Logout", "Home")</li>
                            </ul>
                        }
                        else if (Role == "Admin")
                        {
                            <ul class="nav navbar-nav">

                                <li>@Html.ActionLink("管理員登出", "Logout", "Home")</li>
                            </ul>
                        }
                    }

                    else
                    {
                        <ul class="nav navbar-nav">

                            <li>@Html.ActionLink("會員註冊", "Create", "Home")</li>
                            <li>@Html.ActionLink("會員登入", "Login", "Home")</li>
                        </ul>

                    }
                }
                <ul class="nav navbar-nav navbar-right">
                    <li id="systemTime"> &nbsp @DateTime.Now</li>
                    <li id="systemTime">Hello! @ViewBag.UserName</li>
                </ul>
            </div>

        </div>
    </div>

    <div class="container body-content">
        <section>
            @{ if (HttpContext.Current.User.Identity.IsAuthenticated)
                {
                    if (Role == "User")
                    {
                        <div class="col-sm-2 sidenav">
                            <p>@Html.ActionLink("首頁", "Index", "Home")</p>
                            <p>@Html.ActionLink("我的帳戶", "Account", "Member")</p>
                            <p>@Html.ActionLink("消費方案", "CourseSeries", "Member")</p>
                            <p>@Html.ActionLink("我的購買紀錄", "Index_MyPurchaseSeries", "Member")</p>
                            <p>@Html.ActionLink("我的課程", "MyCourse", "Member")</p>
                            @*<p>@Html.ActionLink("預約紀錄", "MyBooking", "Member")</p>*@
                            <p>@Html.ActionLink("各館資訊", "StoreInfo", "Member")</p>
                        </div>
                        <div class="col-sm-10">
                            @RenderBody()
                        </div>
                    }
                    else if (Role == "Admin")
                    {
                        <div class="col-sm-2 sidenav">
                            <p>@Html.ActionLink("首頁", "Index", "Admin")</p>
                            @*<p>@Html.ActionLink("課程", "Course", "Admin")</p>
                                <p>@Html.ActionLink("課程方案", "CourseSeries", "Admin")</p>*@
                            <p>@Html.ActionLink("教練", "Teacher", "Admin")</p>
                            <p>@Html.ActionLink("館別", "Store", "Admin")</p>
                            <p>@Html.ActionLink("教室", "Classroom", "Admin")</p>
                            @*<p>@Html.ActionLink("課程類型", "CourseType", "Admin")</p>*@
                            @*<p>@Html.ActionLink("會員資料管理", "Member", "Admin")</p>*@
                        </div>
                        <div class="col-sm-10">
                            @RenderBody()
                        </div>
                    }

                }

                else
                {
                    ViewBag.UserName = "訪客";
                    <div class="col-sm-2 sidenav">
                        <p>@Html.ActionLink("首頁", "Index", "Home")</p>
                        <p>@Html.ActionLink("各館資訊", "StoreInfo", "Member")</p>
                    </div>
                    <div class="col-sm-10">
                        @RenderBody()
                    </div>

                }
            }

        </section>
        <hr />
    </div>

    <footer>
        <p>&copy; @DateTime.Now.Year - 我的 ASP.NET 應用程式</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
